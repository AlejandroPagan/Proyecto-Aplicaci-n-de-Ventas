<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:backgroundTint="#F2F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Eliminar Ventas"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo: Número del comercial -->
        <EditText
            android:id="@+id/etNumeroComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Número del comercial"
            android:inputType="number" />

        <!-- Campo: Cantidad de ventas -->
        <EditText
            android:id="@+id/etCantidadVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Cantidad de ventas"
            android:inputType="number" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E3A8A"
            android:padding="12dp"
            android:text="ELIMIANR VENTAS CONTACTO"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:rippleColor="?attr/colorControlHighlight" />

        <TextView
            android:id="@+id/tvMesActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mes actual: "
            android:textColor="#333"
            android:textStyle="italic" />

        <TableLayout
            android:id="@+id/tablaVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE"
            android:stretchColumns="*">

        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="64dp"
            android:backgroundTint="#93C5FD"
            android:padding="12dp"
            android:text="CAMBIAR MES"
            android:textAllCaps="false"
            android:textColor="#1E3A8A"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:rippleColor="?attr/colorControlHighlight" />
        <!--Botón segundo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E3A8A"
            android:padding="12dp"
            android:text="VOLVER"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:rippleColor="?attr/colorControlHighlight" />
    </LinearLayout>
</ScrollView>