<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Agregar Ventas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center" />

        <!-- Campo: Nombre del comercial -->
        <EditText
            android:id="@+id/etNombreComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del comercial"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Campo: Número del comercial -->
        <EditText
            android:id="@+id/etNumeroComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número del comercial"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Campo: Cantidad de ventas -->
        <EditText
            android:id="@+id/etCantidadVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad de ventas"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#104313"
            android:text="Guardar ventas"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvMesActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mes actual: "
            android:textStyle="italic"
            android:textColor="#333" />

        <TableLayout
            android:id="@+id/tablaVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp">

        </TableLayout>

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00796B"
            android:text="Borrar tabla"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
